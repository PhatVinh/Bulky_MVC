@model CreateProductVM
<h1>Create Category</h1>
<form method="post" class="row">
	<div class="border p-3">
		<div class="mb-3 row p-1">
			<label asp-for="@Model.Product.Title" class="ms-2"></label>
			<input asp-for="@Model.Product.Title" class="form-control border-0 mt-3" />
			<span asp-validation-for="@Model.Product.Title" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="@Model.Product.Description" class="ms-2"></label>
			<input asp-for="@Model.Product.Description" class="form-control border-0 mt-3" />
			<span asp-validation-for="@Model.Product.Description" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="@Model.Product.ISBN" class="ms-2"></label>
			<input asp-for="@Model.Product.ISBN" class="form-control border-0 mt-3" />
			<span asp-validation-for="@Model.Product.ISBN" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="@Model.Product.Author" class="ms-2"></label>
			<input asp-for="@Model.Product.Author" class="form-control border-0 mt-3" />
			<span asp-validation-for="@Model.Product.Author" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="@Model.Product.ListPrice" class="ms-2"></label>
			<input asp-for="@Model.Product.ListPrice" class="form-control border-0 mt-3" />
			<span asp-validation-for="@Model.Product.ListPrice" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="@Model.Product.Price" class="ms-2"></label>
			<input asp-for="@Model.Product.Price" class="form-control border-0 mt-3" />
			<span asp-validation-for="@Model.Product.Price" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="@Model.Product.Price50" class="ms-2"></label>
			<input asp-for="@Model.Product.Price50" class="form-control border-0 mt-3" />
			<span asp-validation-for="@Model.Product.Price50" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="@Model.Product.Price100" class="ms-2"></label>
			<input asp-for="@Model.Product.Price100" class="form-control border-0 mt-3" />
			<span asp-validation-for="@Model.Product.Price100" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="@Model.Product.CategoryId" class="ms-2">Category</label>
			<select asp-for="@Model.Product.CategoryId" asp-items="@Model.Category" class="form-select border-0 mt-3">
				<option selected>---Select Category---</option>
			</select>
			<span asp-validation-for="@Model.Product.CategoryId" class="text-danger"></span>
		</div>
		<div class="row pt-2">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">Create</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary form-control">Back</a>
			</div>
		</div>
	</div>
</form>
@section scripts{
	<partial name="_ValidationScriptsPartial" />
}
