@model List<Product>

	<div class="container">
		<div class="row pt-4 pb-4">
			<div class="col-6">
				<h2>Category List</h2>
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Product" asp-action="Create" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i> Create new Product
				</a>
			</div>
		</div>
	</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Title
			</th>
			<th>
				Description
			</th>
			<th>
				Description
			</th>
			<th>
				ISBN
			</th>
			<th>
				Author
			</th>
			<th>
				ListPrice
			</th>
			<th>
				Category
			</th>
		</tr>
	</thead>
	<tbody>
		@{
			foreach(var obj in Model)
			{
				<tr>
					<td>
						@obj.Title
					</td>
					<td>
						@obj.Description
					</td>
					<td>
						@obj.ISBN
					</td>
					<td>
						@obj.Author
					</td>
					<td>
						@obj.ListPrice
					</td>
					<td>
						
					</td>
					<td>
						<a class="btn btn-primary" asp-controller="Product" asp-route-id="@obj.Id" asp-action="Edit">Edit</a>
						<a class="btn btn-danger" asp-controller="Product" asp-route-id="@obj.Id" asp-action="Delete">Delete</a>
					</td>
				</tr>
			}
		}
	</tbody>
</table>
@section Scripts {
	<partial name="_Notification" />"
}
